<style>
  #register-div {
    width: 90%;
    max-width: 600px;
    margin: 30px auto;
    background-color: #f5f5dc;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  #register-div h3 {
    margin-bottom: 20px;
    font-size: 24px;
    color: #333;
  }

  .form-label {
    font-weight: bold;
    margin-bottom: 5px;
    display: block;
  }

  .register-ele {
    margin-bottom: 15px;
  }

  .register-ele input,
  .register-ele select {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .register-ele input:focus,
  .register-ele select:focus {
    border-color: #007bff;
    outline: none;
  }

  .register-ele button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    border: none;
    color: white;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
  }

  .register-ele button:hover {
    background-color: #0056b3;
  }

  .register-ele p {
    margin-top: 20px;
  }

  .register-ele p a {
    color: #007bff;
  }

  .register-ele p a:hover {
    text-decoration: underline;
  }

  @media (min-width: 768px) {
    #register-div {
      padding: 40px;
    }

    .register-ele {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .form-label {
      width: 30%;
      margin-bottom: 0;
      text-align: right;
      padding-right: 10px;
    }

    .register-ele input,
    .register-ele select {
      width: 65%;
    }
  }
</style>
<% layout('layouts/boilerplate')%>
<div id="register-div">
  <h3
    class="bg-warning"
    style="text-align: center; padding: 10px; border-radius: 10px"
  >
    <b>Register</b>
  </h3>

  <% if(errors && errors.length > 0){ %>
  <ul>
    <% errors.forEach(function(error){ %>
    <li style="color: red"><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/register" method="POST" id="register-form">
    <div class="register-ele">
      <label for="role" class="form-label"><b>Login as a</b></label>
      <select id="role" name="role" required class="form-control form-select">
        <option value="" selected>Please Select.....</option>
        <option value="admin">Admin</option>
        <option value="customer">Customer</option>
      </select>
    </div>
    <div class="register-ele">
      <label for="name" class="form-label">Name</label>
      <input
        id="name"
        class="form-control"
        type="text"
        name="name"
        value="<%= typeof name !== 'undefined' ? name : '' %>"
        required
      />
    </div>
    <div class="register-ele">
      <label for="email" class="form-label">Email</label>
      <input
        id="email"
        class="form-control"
        type="email"
        name="email"
        value="<%= typeof email !== 'undefined' ? email : '' %>"
        required
      />
    </div>
    <div class="register-ele">
      <label for="mobile" class="form-label">Mobile Number</label>
      <input
        id="mobile"
        class="form-control"
        type="tel"
        name="mobile"
        minlength="10"
        maxlength="10"
        required
      />
    </div>
    <div class="register-ele">
      <label for="address" class="form-label">Address</label>
      <input
        id="address"
        class="form-control"
        type="text"
        name="address"
        maxlength="60"
        required
      />
    </div>
    <div class="register-ele">
      <label for="password" class="form-label">Password</label>
      <input
        id="password"
        class="form-control"
        type="password"
        name="password"
        value="<%= typeof password !== 'undefined' ? password : '' %>"
        required
      />
    </div>
    <div class="register-ele">
      <label for="password2" class="form-label">Confirm Password</label>
      <input
        id="password2"
        class="form-control"
        type="password"
        name="password2"
        value="<%= typeof password2 !== 'undefined' ? password2 : '' %>"
        required
      />
    </div>
    <div class="register-ele">
      <button type="submit"><b>Register</b></button>
    </div>
  </form>

  <p style="text-align: center">
    Already have an account? <a href="/login"><b>Login here</b></a>
  </p>
</div>
